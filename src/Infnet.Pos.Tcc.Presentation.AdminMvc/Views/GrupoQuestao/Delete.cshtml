@model Infnet.Pos.Tcc.Application.ViewModels.GrupoQuestaoViewModel

@{
    ViewData["Title"] = SharedLocalizer["{0} - {1}", "Grupo de Questão", "Remover"];
}

<h1>@ViewData["Title"]</h1>
<hr/>

<h3>@SharedLocalizer["Tem certeza que deseja remover?"]</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="@SharedLocalizer["Remover"]" class="btn btn-danger"/>
        <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["Voltar"]</a>
    </form>
</div>
